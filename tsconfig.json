{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,  // allows import of JSON
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "types": [],

    "sourceMap": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
